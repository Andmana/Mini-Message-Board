<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Message Board</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css" />
    </head>
    <body>
        <main>
            <header>
                <h1><%= title %></h1>
            </header>

            <!-- -->
            <div class="center-div">
                <a href="/new" class="link-anchor">Create Messages</a>
            </div>

            <div id="messages-board">
                <% messages.map((message) => { %>
                <div class="box">
                    <p class="box-date"><%= dateFormat( message.added) %></p>
                    <p class="box-text"><%= message.text %></p>
                    <p class="box-name">â”€ <%= message.user %></p>
                </div>
                <% }) %>
            </div>
        </main>
    </body>
</html>
